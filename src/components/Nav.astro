---
import ToggleButton from '../components/ToggleButton.jsx';
---

<nav class="relative">
  <div class="max-w-7.5xl mx-auto px-4 sm:px-8 lg:px-12">
    <div class="relative flex items-center justify-between h-20">
      <div class="flex-shrink-0 z-20">
        <img
          class="h-20 w-auto"
          src='../images/logo.png'
          alt="Logo"
        />
      </div>

      <div class="hidden md:flex md:items-center md:justify-end flex-1 ml-20">
        <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4 md:ml-auto text-center md:text-left">
          <a href="/" class="text-gray-700 hover:text-blue-500 hover:underline hover:underline-offset-4 hover:decoration-2 px-4 py-3 rounded-md text-base md:text-xl font-bold transition-colors duration-200">Home</a>
          <a href="/about" class="text-gray-700 hover:text-blue-500 hover:underline hover:underline-offset-4 hover:decoration-2 px-4 py-3 rounded-md text-base md:text-xl font-bold transition-colors duration-200">About</a>
          <a href="/services" class="text-gray-700 hover:text-blue-500 hover:underline hover:underline-offset-4 hover:decoration-2 px-4 py-3 rounded-md text-base md:text-xl font-bold transition-colors duration-200">Services</a>
          <a href="#vendors" class="text-gray-700 hover:text-blue-500 hover:underline hover:underline-offset-4 hover:decoration-2 px-4 py-3 rounded-md text-base md:text-xl font-bold transition-colors duration-200">Vendors</a>
          <a href="#projects" class="text-gray-700 hover:text-blue-500 hover:underline hover:underline-offset-4 hover:decoration-2 px-4 py-3 rounded-md text-base md:text-xl font-bold transition-colors duration-200">Projects</a>
          <a href="#contact" class="text-white bg-blue-500 hover:bg-blue-600 px-4 py-3 rounded-full text-base md:text-xl font-bold transition-colors duration-200">Contact</a>
        </div>
      </div>

      <ToggleButton client:load />
    </div>
  </div>
</nav>